#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

bool isHappy(int n) {
	int dig;
	int sum;
	int min, max;
	if (0 == n)
	{
		return false;
	}
	min = n;
	max = n;
	while (1!=n)
	{
		printf("n: %d\n\t", n);
		sum = 0;
		while(n != 0)
		{
			dig = n % 10;
			n = n /10;
			sum += dig*dig;
		}
		n = sum;
		if(n == min)
		{
			break;
		}
		if(n < min)
		{
			min = n;
		}
	}
	if(1 == n)
	{
		return true;
	}
	else
	{
		return false;
	}
}

int main(void) {
	printf("%d\n\t", isHappy(2));
	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}
